<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="@color/blue2" />
            <gradient android:gradientRadius="26dp" android:centerColor="@color/light_grey" android:endColor="@color/grey" android:startColor="#FFFFFF" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#FFFFFF" />
            <stroke android:width="1dp" android:color="@color/blue2" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="2dp" android:color="@color/light_red" />
        </shape>
    </item>
</selector>