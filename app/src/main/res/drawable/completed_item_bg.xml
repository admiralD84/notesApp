<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"
    >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="3dp" android:color="@color/dark_grey" />
            <gradient android:centerColor="@color/light_grey" android:endColor="@color/light_blue" android:startColor="@color/light_blue" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <stroke android:width="2dp" android:color="@color/dark_grey" />
            <solid android:color="@color/light_grey"/>

        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp" />
            <solid android:color="@color/light_blue"/>
            <stroke android:width="2dp" android:color="@color/dark_grey" />
        </shape>
    </item>
</selector>